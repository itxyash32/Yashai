<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My ChatGPT-Style AI</title>
  <style>
    body {
      margin: 0;
      background-color: #0d1117;
      color: #c9d1d9;
      font-family: "Segoe UI", Arial, sans-serif;
      display: flex;
      flex-direction: column;
      height: 100vh;
    }

    header {
      background: #161b22;
      padding: 10px;
      text-align: center;
      font-size: 1.2em;
      font-weight: bold;
      border-bottom: 1px solid #30363d;
    }

    #chat {
      flex: 1;
      overflow-y: auto;
      padding: 15px;
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    .bubble {
      padding: 10px 14px;
      border-radius: 12px;
      max-width: 80%;
      word-wrap: break-word;
      white-space: pre-wrap;
      animation: fadeIn 0.3s ease;
    }

    .user {
      background: #238636;
      color: white;
      align-self: flex-end;
    }

    .bot {
      background: #30363d;
      color: #c9d1d9;
      align-self: flex-start;
    }

    #input-area {
      display: flex;
      border-top: 1px solid #30363d;
      background: #161b22;
      padding: 8px;
    }

    input {
      flex: 1;
      padding: 10px;
      background: #0d1117;
      color: #c9d1d9;
      border: 1px solid #30363d;
      border-radius: 8px;
      outline: none;
    }

    button {
      margin-left: 8px;
      background: #238636;
      color: white;
      border: none;
      padding: 10px 16px;
      border-radius: 8px;
      cursor: pointer;
      font-weight: bold;
    }

    button:hover {
      background: #2ea043;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(5px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body>
  <header>ðŸ¤– My ChatGPT-Style AI</header>
  <div id="chat"></div>

  <div id="input-area">
    <input id="msg" placeholder="Type your message..." onkeypress="if(event.key==='Enter')send()">
    <button onclick="send()">Send</button>
  </div>

  <script>
    async function send(){
      const input = document.getElementById('msg');
      const chat = document.getElementById('chat');
      const userText = input.value.trim();
      if(!userText) return;
      input.value = "";

      // Add user message
      chat.innerHTML += `<div class='bubble user'>${userText}</div>`;
      chat.scrollTop = chat.scrollHeight;

      // Add bot "thinking..."
      const botBubble = document.createElement('div');
      botBubble.className = 'bubble bot';
      botBubble.textContent = "Thinking...";
      chat.appendChild(botBubble);
      chat.scrollTop = chat.scrollHeight;

      // API call
      const url = "https://api-inference.huggingface.co/models/facebook/blenderbot-400M-distill";
      const headers = { "Content-Type": "application/json" };
      const response = await fetch(url, {
        method: "POST",
        headers,
        body: JSON.stringify({ inputs: userText })
      });
      const data = await response.json();
      const reply = data?.generated_text || "Sorry, I couldnâ€™t understand.";

      // Replace "Thinking..." with reply
      botBubble.textContent = reply;
      chat.scrollTop = chat.scrollHeight;
    }
  </script>
</body>
</html>
